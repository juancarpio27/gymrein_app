<h1>Paquetes</h1>

<%= form_tag admin_packages_path, :method => 'get' do %>
    <div class="row">
      <div class="col-md-4">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
          <%= text_field_tag :search, params[:search],  {class: 'form-control', placeholder: "Buscar"}  %>
        </div>
      </div>
      <div class="col-md-4">
        <%= submit_tag "Search", class: "btn btn-primary"  %>
      </div>
    </div>
<% end %><br>

<p><%= @packages.count %> paquete(s)</p>

<table class="table table-striped">
  <% @packages.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= link_to "Detalles", admin_package_path(package) %></td>
        <td><%= link_to "Editar", edit_admin_package_path(package) %></td>
        <td><%= link_to "Borrar", admin_package_path(package), method: :delete %></td>
      </tr>
  <% end %>
</table>

<%= will_paginate @packages, renderer: BootstrapPagination::Rails %>

<%= link_to "Nuevo paquete", new_admin_package_path %>