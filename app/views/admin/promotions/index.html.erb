<h1>Promociones</h1>

<%= form_tag admin_promotions_path, :method => 'get' do %>
    <div class="row">
      <div class="col-md-4">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
          <%= text_field_tag :search, params[:search],  {class: 'form-control', placeholder: "Buscar"}  %>
        </div>
      </div>
      <div class="col-md-4">
        <%= submit_tag "Search", class: "btn btn-primary"  %>
      </div>
    </div>
<% end %><br>

<p><%= @promotions.count %> promociones</p>

<table class="table table-striped">
  <% @promotions.each do |promotion| %>
      <tr>
        <td><%= promotion.code %></td>
        <td><%= link_to "Detalles", admin_promotion_path(promotion) %></td>
        <td><%= link_to "Editar", edit_admin_promotion_path(promotion) %></td>
        <td><%= link_to "Borrar", admin_promotion_path(promotion), method: :delete %></td>
      </tr>
  <% end %>
</table>

<%= will_paginate @promotions, renderer: BootstrapPagination::Rails %>

