<%= form_for [:admin, @promotion] do  |f| %>
    <% if @promotion.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@promotion.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @promotion.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="form-group">
      <%= f.text_field :code, {class: 'form-control', placeholder: "Código"} %>
    </div>
    <div class="form-group">
      <%= f.select :promotion_type, options_for_select(Promotion.promotion_types.map {|k,v| [k,k]}) %>
    </div>

    <div class="form-group">
      <%= f.text_field :amount, {class: 'form-control', placeholder: "Cantidad"} %>
    </div>
    <div class="form-group">
      <%= f.text_field :expiration, {class: 'form-control', placeholder: "Fecha de expiración"} %>
    </div>

    <div class="actions">
      <%= f.submit 'Guardar' , class: "btn btn-primary" %>
    </div>

<% end %>
