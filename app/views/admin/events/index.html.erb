<h1>Clases</h1>


<%= form_tag admin_events_path, :method => 'get' do %>
    <div class="row">
      <div class="col-md-4">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
          <%= text_field_tag :search, params[:search],  {class: 'form-control', placeholder: "Buscar"}  %>
        </div>
      </div>
      <div class="col-md-4">
        <%= submit_tag "Search", class: "btn btn-primary"  %>
      </div>
    </div>
<% end %><br>

<p><%= @events.count %> clase(s)</p>

<table class="table table-striped">
  <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= link_to "Detalles", admin_event_path(event) %></td>
        <td><%= link_to "Horarios", admin_event_class_dates_path(event) %></td>
        <td><%= link_to "Editar", edit_admin_event_path(event) %></td>
        <td><%= link_to "Borrar", admin_event_path(event), method: :delete %></td>
      </tr>
  <% end %>
</table>

<%= will_paginate @events, renderer: BootstrapPagination::Rails %>


<%= link_to "Agregar", new_admin_event_path %>
