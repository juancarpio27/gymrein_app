<h2>Detalles</h2>

<div class="row">
  <div class="col-md-2">
    <%= image_tag @user.avatar.url(:thumb), size: "100" %>
  </div>
  <div class="col-md-9">
    <h3>ID usuario: <%= @user.id %></h3>
  </div>
</div>
<br>
<table class="table table-striped">

  <tr>
    <td>Nombre</td>
    <td><%= @user.full_name %></td>
  </tr>
  <tr>
    <td>Correo</td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td>Tel√©fono</td>
    <td><%= @user.phone %></td>
  </tr>
  <tr>
    <td>Fecha de nacimiento</td>
    <td><%= @user.birth %></td>
  </tr>
  <tr>
    <td>Sexo</td>
    <td><%= @user.sex %></td>
  </tr>
  <tr>
    <td>Clases disponibles</td>
    <td><%= @user.available_classes %></td>
  </tr>
  <tr>
    <td>Clases reservadas</td>
    <td><%= @user.future_reservations.count %></td>
    <td><%= link_to "Reservas", admin_user_reservations_path(@user) %></td>
  </tr>
  <tr>
    <td>Clases en lista de espera</td>
    <td><%= @user.future_waiting_lists.count %></td>
    <td><%= link_to "Lista de espera", admin_user_waiting_lists_path(@user) %></td>
  </tr>
  <tr>
    <td>Paquetes comprados</td>
    <td><%= @user.user_packages.count %></td>
    <td><%= link_to "Historial", admin_user_user_packages_path(@user) %></td>
  </tr>
</table>

<%= link_to "Editar", edit_admin_user_path(@user) %>
<%= link_to "Regresar", admin_users_path %>