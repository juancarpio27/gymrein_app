<h2>Detalles</h2>

<div class="row">
  <div class="col-md-2">
    <%= image_tag @user.avatar.url(:thumb), size: "100" %>
  </div>
  <div class="col-md-9">
    <h3>ID usuario: <%= @user.id %></h3>
  </div>
</div>
<br>
<table class="table table-striped">
  <tr>
    <td><%=@user.full_name %></td>
    <td><%=@user.email %></td>
    <td><%=@user.phone %></td>
    <td><%=@user.birth %></td>
    <td><%=@user.sex %></td>
  </tr>
</table>

<%= link_to "Editar", edit_admin_user_path(@user) %>
<%= link_to "Regresar", admin_users_path %>