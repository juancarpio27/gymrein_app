<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Cambia tu contraseña</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.label :password, "Nueva contraseña" %><br />
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres mínimo)</em><br />
            <% end %>
            <%= f.password_field :password, {class: 'form-control', placeholder: "Contraseña", autofocus: true, autocomplete: "off"} %>
          </div><br>

          <div class="field">
            <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
            <%= f.password_field :password_confirmation, {class: 'form-control', placeholder: "Confirmar", autocomplete: "off"} %>
          </div><br>

          <div class="actions">
            <%= f.submit "Cambiar contraseña", class: "btn btn-primary" %>
          </div>
      <% end %>

    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>



