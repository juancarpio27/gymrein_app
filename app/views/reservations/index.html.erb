<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if params[:past] %>
          <%= link_to 'Ver clases futuras', reservations_path, class: 'btn btn-info' %>
      <% else %>
          <%= link_to 'Ver clases pasadas', 'reservations?past=true', class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @reservations.each do |reservation| %>
        <div class="col-md-3">
          <div class="well">
            <div class="row">
              <div class="col-md-3">
                <%= image_tag reservation.class_date.event.logo.url(:thumb), size: "50" %>
              </div>
              <div class="col-md-9">
                <h4><%= reservation.class_date.event.name %></h4>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <h5><%= reservation.class_date.date %></h5>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <%= link_to 'Detalles', reservation_path(reservation), class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
